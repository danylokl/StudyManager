@model WebApi.Dto.CourseStudentAssignmentModel
<form asp-action="AssignStudent">
    <table>
        <thead>
            <tr>
                <td>
                    Id
                </td>
                @*<td>
            Name
        </td>
        <td>
            BirthDate
        </td>
        <td>
            Email
        </td>
        <td>
            PhoneNumber
        </td>*@
                @Html.HiddenFor(m => Model.Id)
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Students.Count; i++)
            {
            <tr>
                <td>
                    @Model.Students[i].StudentFullName
                </td>
                <td>
                    @Html.CheckBoxFor(m => Model.Students[i].IsAssigned, new { @checked= Model.Students[i].IsAssigned})
                </td>
                @Html.HiddenFor(m => Model.Students[i].StudentId)
            </tr>

            }
        </tbody>

    </table>
    <input type="submit" value="Save" />
</form>